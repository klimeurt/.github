{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "description": "Group all Go patch updates together on Sunday",
      "schedule": ["on Sunday"],
      "matchManagers": ["gomod"],
      "matchUpdateTypes": ["patch"],
      "groupName": "Go patch updates",
      "groupSlug": "go-patch"
    },
    {
      "description": "Group all Go minor updates together",
      "matchManagers": ["gomod"],
      "matchUpdateTypes": ["minor"],
      "groupName": "Go minor updates",
      "groupSlug": "go-minor"
    },
    {
      "description": "Keep Go major updates separate",
      "matchManagers": ["gomod"],
      "matchUpdateTypes": ["major"],
      "automerge": false
    }
  ],
  "golang": {
    "postUpdateOptions": ["gomodTidy", "gomodUpdateImportPaths"]
  },
  "prConcurrentLimit": 10,
  "prHourlyLimit": 2,
  "labels": ["dependencies", "{{manager}}"],
  "commitMessagePrefix": "chore(deps):",
  "commitMessageAction": "update",
  "commitMessageTopic": "{{depName}}",
  "commitMessageExtra": "to {{newVersion}}"
}
